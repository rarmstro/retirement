{
  "title": "Test Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "title": "Full Name",
      "default": "John Doe"
    },
    "age": {
      "type": "integer",
      "title": "Age"
    },
    "isActive": {
      "type": "boolean",
      "title": "Is Active"
    },
    "role": {
      "type": "string",
      "title": "Role",
      "enum": ["Admin", "User", "Guest"],
      "default": "User"
    },   
    "color": {
      "type": "string",
      "enum": ["Red", "Green", "Blue"],
      "title": "Favorite Color"
    },
    "preferences": {
      "$ref": "#/$defs/preferences"
    },
    "tags": {
      "type": "array",
      "title": "Tags",
      "items": {
        "type": "string"
      }
    },
    "addresses": {
      "type": "array",
      "title": "Addresses",
      "items": {
        "$ref": "#/$defs/address"
      }
    }
  },
  "$defs": {
    "favorite": {
      "type": "string",
      "title": "Favorite"
    },
    "theme": {
      "type": "string",
      "title": "Theme",
      "enum": ["Light", "Dark"]
    },
    "preferences": {
      "type": "object",
      "title": "User Preferences",
      "properties": {
        "theme": {
          "$ref": "#/$defs/theme"
        },
        "notifications": {
          "type": "boolean",
          "title": "Enable Notifications"
        },
        "favorites": {
          "type": "array",
          "title": "Favorites",
          "items": {
            "$ref": "#/$defs/favorite"
          }
        }
      }
    },
    "address": {
      "type": "object",
      "title": "Address",
      "properties": {
        "street": {
          "type": "string",
          "title": "Street"
        },
        "city": {
          "type": "string",
          "title": "City"
        },
        "postalCode": {
          "type": "string",
          "title": "Postal Code"
        }
      }
    }
  }
}
